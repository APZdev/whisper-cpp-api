{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],
    /* Modules */
    "rootDir": "src",
    "module": "NodeNext",
    "outDir": "build",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    /* JavaScript Support */
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
